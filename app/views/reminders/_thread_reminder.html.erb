<article class="media">
  <div class="media-left">
    <div class="icon-emoji"
         data-emoji-value="<%= thread_reminder.icon_emoji %>"
         data-is-custom="<%= current_user.slack_emoji_list.member?(thread_reminder.icon_emoji) %>"
         data-image-url="<%= slack_emoji_url(thread_reminder) %>"
    ></div>
  </div>
  <div class="media-content">
    <div class="content">
      <strong><%= thread_reminder.icon_name %></strong>
      <small><%= day_of_week(thread_reminder) %></small>
      <small><%= thread_reminder.scheduled_time.strftime("%H:%M") %></small>
      <br>
      <%= simple_format(h(thread_reminder.message)) %>
    </div>
  </div>
  <div class="media-right">
    <%= link_to(tag.span(tag.i(nil, class: 'fas fa-edit'), class: 'icon'), edit_reminder_thread_reminder_path(reminder, thread_reminder)) %>
  </div>
</article>
