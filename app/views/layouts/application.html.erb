<!DOCTYPE html>
<html>
  <head>
    <title>ReminderBoy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <span><%= link_to 'ReminderBoy', root_path, style: 'text-decoration: none; font-size: xx-large;' %></span>
      <% if visitor? %>
        <span style="float:right;"><%= link_to 'Login', login_path %></span>
      <% else %>
        <span style="float:right;"><%= link_to 'Logout', logout_path, method: :delete %></span>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
