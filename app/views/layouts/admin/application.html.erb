<!DOCTYPE html>
<html>
<head>
  <title>ReminderBoy</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar is-danger" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to 'Admin::ReminderBoy', admin_users_path, style: 'text-decoration: none; font-size: xx-large;', class: "navbar-item" %>
    </div>
    <div class="navbar-menu">
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if admin? %>
              <%= link_to 'To User', root_path, class: "button is-info" %>
              <%= link_to 'Logout', logout_path, method: :delete, class: "button is-light"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
<main>
  <div class="container">
    <%= yield %>
  </div>
</main>
</body>
</html>
