<div class="row">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Login</span>
        <% if visitor? %>
          <%= link_to image_tag('https://platform.slack-edge.com/img/sign_in_with_slack.png', alt: 'Add to Slack'), @authorize_url %>
        <% else %>
          You are already logged in. <%= link_to 'Logout', logout_path, method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>