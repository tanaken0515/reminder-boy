<% content_for :title do %>
  Reminder Detail
<% end %>
<section class="section">
  <div class="level">
    <div class="level-left">
      <div class="level-item">
        <p class="title">Reminder Detail</p>
      </div>
    </div>
  </div>
  <%= render(partial: 'reminder', locals: {reminder: @reminder, show_timestamps: true, show_thread_reminders: true}) %>
  <div class="level">
    <div class="level-item">
      <div class="buttons">
        <%= link_to 'Edit', edit_reminder_path(@reminder), class: 'button is-link' %>
      </div>
    </div>
  </div>
</section>
