<!DOCTYPE html>
<html>
  <head>
    <title>ReminderBoy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-info" role="navigation" aria-label="main navigation">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to 'ReminderBoy', root_path, style: 'text-decoration: none; font-size: xx-large;', class: "navbar-item" %>
        </div>
        <div class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <% if visitor? %>
                  <%= link_to 'Login', login_path, class: "button is-light" %>
                <% else %>
                  <% if admin? %>
                    <%= link_to 'To Admin', admin_users_path, class: "button is-danger" %>
                  <% end %>
                  <%= link_to 'Logout', logout_path, method: :delete, class: "button is-light"  %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
