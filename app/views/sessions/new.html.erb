<section class="section">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third">
      <div class="box">
        <div class="title">Login</div>
        <div class="content has-text-centered">
          <%= render "shared/flash" %>
          <% if visitor? %>
            <%= link_to image_tag('https://platform.slack-edge.com/img/sign_in_with_slack.png', alt: 'Add to Slack'), @authorize_url %>
          <% else %>
            You are already logged in. <%= link_to 'Logout', logout_path, method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>