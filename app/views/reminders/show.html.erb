<section class="section">
  <div class="level">
    <div class="level-left">
      <div class="level-item">
        <p class="title">Reminder Detail</p>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <%= link_to 'Reminders', reminders_path, class: 'button' %>
      </div>
    </div>
  </div>
  <table class="table is-fullwidth is-hoverable">
    <tbody>
    <tr>
      <th>曜日</th>
      <td><%= day_of_week(@reminder) %></td>
    </tr>
    <tr>
      <th>時刻</th>
      <td><%= format("%02d:%02d", @reminder.hour, @reminder.minute) %></td>
    </tr>
    <tr>
      <th>通知先チャンネル</th>
      <td><%= slack_channel_name(@reminder) %></td>
    </tr>
    <tr>
      <th>アイコン</th>
      <td><%= "#{@reminder.icon_emoji} #{@reminder.icon_name}" %></td>
    </tr>
    <tr>
      <th>メッセージ</th>
      <td><%= @reminder.message %></td>
    </tr>
    <tr>
      <th>祝日の通知</th>
      <td><%= @reminder.holiday_included? ? '通知する' : '通知しない' %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @reminder.status %></td>
    </tr>
    <tr>
      <th>作成日時</th>
      <td><%= @reminder.created_at %></td>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @reminder.updated_at %></td>
    </tr>
    </tbody>
  </table>
  <div class="level">
    <div class="level-item">
      <div class="buttons">
        <%= link_to 'Edit', edit_reminder_path(@reminder), class: 'button is-link' %>
        <%= link_to 'Test Post', post_message_reminder_path(@reminder),
                    method: :put, remote: true, data: {confirm: "テスト通知をします。よろしいですか？"}, class: 'button is-warning' %>
      </div>
    </div>
  </div>
</section>
